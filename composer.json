{
    "name": "softal/yii-user",
    "description": "User registration and authentication module for Yii2",
    "keywords": ["yii", "yii-user", "user management", "softal"],
    "type": "yii-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/softal/yii-user/issues?state=open",
        "forum": "https://gitter.im/softal/yii-user",
        "source": "https://github.com/softal/yii-user"
    },
    "authors": [
        {
            "name": "Alek",
            "email": "alekl@softal.com",
            "homepage": "https://github.com/softal"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "yiisoft/yii2": "~2.0",
        "yiisoft/yii2-swiftmailer": "~2.0",
        "yiisoft/yii2-authclient": "~2.0"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "~2.0",
        "codeception/specify": "*",
        "codeception/verify": "*"
    },
    "autoload": {
        "psr-4": {
            "softal\\user\\": ""
        }
    },
    "extra": {
        "bootstrap": "softal\\user\\Bootstrap",
        "branch-alias": {
            "dev-master": "1.0",
            "dev-develop": "1.0"
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}